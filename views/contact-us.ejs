<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./includes/head.ejs') %>
  </head>
  <body>
    <%- include('./includes/nav.ejs') %>
    <h1>Contact us</h1>
    <form
      action="/message"
      method="POST"
      class="container"
      enctype="multipart/form-data"
    >
      <div class="form-group">
        <input class="form-control" name="fullname" type="text" />
      </div>
      <div class="form-group">
        <input class="form-control" name="email" type="text" />
      </div>
      <div class="form-group">
        <input class="form-control" name="contactImg" type="file" />
      </div>
      <div class="form-group">
        <textarea
          name="description"
          class="form-control"
          id=""
          cols="30"
          rows="10"
        ></textarea>
      </div>
      <div class="form-group">
        <input
          type="submit"
          value="contact us"
          class="btn btn-block btn-primary"
        />
      </div>
    </form>
  </body>
</html>
